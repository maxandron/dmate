{
  "name": "DatePal",
  "version": "0.0.1",
  "description": "DatePal is your little dating helper",
  "permissions": [
      "https://api.openai.com/v1/engines/davinci/completions",
      "activeTab",
      "storage"
  ],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://tinder.com/*"],
      "all_frames": false,
      "run_at": "document_end",
      "js": ["datepal.js", "widget.js"]
    }
 ],
 "web_accessible_resources": ["datapal.html"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}
