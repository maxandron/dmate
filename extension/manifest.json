{
    "name": "DMate",
    "version": "0.0.1",
    "description": "DMate is your little direct messaging helper",
    "permissions": [
        "*://*.amazonaws.com/*",
        "activeTab",
        "storage"
    ],
    "content_security_policy": "script-src 'self' https://apis.google.com/js/platform.js; object-src 'self'",
    "options_page": "options.html",
    "background": {
        "scripts": [
            "config.js",
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://tinder.com/*"
            ],
            "all_frames": false,
            "run_at": "document_end",
            "js": [
                "config.js",
                "loadrecaptcha.js",
                "widget.js",
                "helpers.js",
                "dmate.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "datapal.html",
        "popup.html",
        "*.jpg",
        "*.JPG",
        "*.png"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "ChatPal",
        "default_icon": {
            "16": "images/penguin16.png",
            "32": "images/penguin32.png",
            "48": "images/penguin48.png",
            "128": "images/penguin128.png"
        }
    },
    "icons": {
        "16": "images/penguin16.png",
        "32": "images/penguin32.png",
        "48": "images/penguin48.png",
        "128": "images/penguin128.png"
    },
    "manifest_version": 2
}
